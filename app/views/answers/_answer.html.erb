<div>
    <strong><%= answer.answer_text %></strong>
    <br>
    <p> <%= "...By  #{answer.user.email}" %> </p>
    <% if current_user %>
	    <p><%= link_to 'Reply', new_answer_path(:comment_id => answer, :parent_id => answer, question_id: answer.question) %> 
		<% if current_user.id == answer.user.id%>|
	    	<%= link_to 'Delete', answer_path(answer), method: :delete, data: { confirm: 'Are you sure?' } %> 
	    <% end %>
	    </p>
    <% end %>
</div>