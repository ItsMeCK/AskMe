<div class="row">
    <div class="col-xs-9">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Question</th>
            <th>User</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @all_questions.each do |question| %>
            <tr>
              <td><%= question.question %></td>
              <td><%= question.user.email %></td>
              <td><%= link_to 'See Answers', question %></td>
              <!-- <td><%= link_to 'Edit', edit_question_path(question) %></td>
              <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-3">
      <strong> My Questions </strong>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Question</th>
            <th>User</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @my_quetions.each do |question| %>
            <tr>
              <td><%= question.question %></td>
              <td><%= question.user_id %></td>
              <td><%= link_to 'Show', question %></td>
              <td><%= link_to 'Edit', edit_question_path(question) %></td>
              <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
