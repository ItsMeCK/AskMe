<div class="row">
	<p id="notice"><%= notice %></p>
</div>
<div class="row"> 
	<p>
	  <strong>Question:
	  	<%= @question.question %>
	  </strong>
	</p>

	<p>
	  <%= "By ... #{@question.user.email} #{@question.created_at.strftime("%FT%T")}"%>
	</p>
	<br>
</div>
<div class="row"> 	

<h3>Answers</h3>
<div class="replyBlack">
  <%= nested_answers @answers.arrange(:order => :created_at) %>
</div>
<br>

<% if current_user %>
	<%= render partial: 'answers/form', locals: { answer: @answer } %> 
	<% if current_user.id == @question.user.id %>
		<%= link_to 'Edit', edit_question_path(@question) %>
	<% end %>
<% end %>
</div>
